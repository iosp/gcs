<UserControl x:Class="GCSArduino.Controls.VideoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:b="clr-namespace:GCSArduino.Controls"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:behavior="clr-namespace:GCSArduino.Behavior" xmlns:model="clr-namespace:GCSArduino.Model"
             mc:Ignorable="d" 
            >
    
    <b:BorderDropAndDrop>
        <i:Interaction.Behaviors>
            <behavior:FrameworkElementDragBehavior/>
            <behavior:FrameworkElementDropBehavior/>
        </i:Interaction.Behaviors>

        <Grid Background="Black">
            <model:VideoPresenter  x:Name="VideoPresenter" >
            
            </model:VideoPresenter>
        </Grid>
    </b:BorderDropAndDrop>

</UserControl>
